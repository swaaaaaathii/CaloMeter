<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.calometer.MenuActivity"
    android:weightSum="1">

    <Button
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Diary"
        android:textColor="#FAFAFA"
        android:background="#6A1B9A"
        android:textSize="30sp"
        android:padding="20dp"
        android:gravity="center"
        android:onClick="openFoodDiary"
        />

    <Button
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise Tracker"
        android:textColor="#FAFAFA"
        android:background="#6A1B9A"
        android:textSize="30sp"
        android:padding="20dp"
        android:layout_marginTop="24sp"
        android:gravity="center"
        android:onClick="openExerciseTracker"
        />

    <Button
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accomplishment"
        android:textColor="#FAFAFA"
        android:background="#6A1B9A"
        android:textSize="30sp"
        android:padding="20dp"
        android:layout_marginTop="24sp"
        android:gravity="center"
        android:onClick="openDailyAcc"
        />

    <Button
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TREND"
        android:textColor="#FAFAFA"
        android:background="#6A1B9A"
        android:textSize="30sp"
        android:padding="20dp"
        android:layout_marginTop="24sp"
        android:gravity="center"
        />

</LinearLayout>
