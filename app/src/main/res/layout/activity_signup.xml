<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.calometer.SignupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Weight"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:paddingTop="50dp"
        android:textColor="#4527A0"
        />

    <EditText
        android:id="@+id/current_weight"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Enter current weight"
        android:background="@android:color/white"
        android:inputType="text"
        android:layout_marginTop="16dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Weight"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:paddingTop="24dp"
        android:textColor="#4527A0"
        />

    <EditText
        android:id="@+id/target_weight"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Enter target weight"
        android:background="@android:color/white"
        android:inputType="text"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter target days"
        android:textColor="#4527A0"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/target_days"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Enter target days"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:background="@android:color/white"
        />

    <Button
        android:id ="@+id/subdet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:text="SUBMIT"
        android:background="#E91E63"
        android:textColor="@android:color/white"
        />

</LinearLayout>
